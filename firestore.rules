rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null;

      // permet acc√®s aux sous-collections du user (correctement)
      match /{document=**} {
        allow read, write: if request.auth != null;
      }
    }
  }
}
