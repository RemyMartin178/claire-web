rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // TEMP : autorise tout utilisateur authentifié à lire/écrire son doc user
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    match /users/{userId}/{subCollection=**} {
      allow read, write: if request.auth != null;
    }
  }
}
