rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Règles pour la collection users - permettre la création initiale
    match /users/{userId} {
      allow read, write, create: if request.auth != null && request.auth.uid == userId;
    }
    
    // Règles pour les sessions
    match /users/{userId}/sessions/{sessionId} {
      allow read, write, create: if request.auth != null && request.auth.uid == userId;
    }
    
    // Règles pour les transcripts
    match /users/{userId}/sessions/{sessionId}/transcripts/{transcriptId} {
      allow read, write, create: if request.auth != null && request.auth.uid == userId;
    }
    
    // Règles pour les messages AI
    match /users/{userId}/sessions/{sessionId}/ai_messages/{messageId} {
      allow read, write, create: if request.auth != null && request.auth.uid == userId;
    }
    
    // Règles pour les summaries
    match /users/{userId}/sessions/{sessionId}/summaries/{summaryId} {
      allow read, write, create: if request.auth != null && request.auth.uid == userId;
    }
    
    // Règles pour les presets
    match /users/{userId}/presets/{presetId} {
      allow read, write, create: if request.auth != null && request.auth.uid == userId;
    }
  }
} 